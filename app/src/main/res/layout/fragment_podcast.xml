<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/fragment_podcast"
    tools:context=".MainActivity"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:id="@+id/fragment_podcastLL"
        >

        <!-- Rounded Image   -->
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:id="@+id/imageView1"
            android:src="@drawable/podcast"
            android:scaleType="fitCenter"
            app:riv_corner_radius_bottom_right="105dp"
            app:riv_corner_radius_bottom_left="105dp"
            app:riv_mutate_background="true"
            />

        <!-- Song and Artist name   -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_song"
                android:textColor="@color/fontDark1"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textSize="34sp"
                />
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playlist"
                android:textColor="@color/fontDark1"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>

        <!-- Music Player Controller    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/lightgray1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/playBtn"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:background="@mipmap/ic_stop">
            </ImageButton>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currenttime"
                android:textColor="@color/fontDark1"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Division    -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkgrey1"/>

        <!-- Playlist  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:id="@+id/Playlist"
            android:paddingHorizontal="45dp">

            <ImageButton
                android:id="@+id/playlist1"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_study"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <ImageButton
                android:id="@+id/playlist2"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_yoga"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <ImageButton
                android:id="@+id/playlist3"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_night"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <ImageButton
                android:id="@+id/playlist4"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_fitness"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:id="@+id/Playlist2"
            android:paddingHorizontal="45dp">

            <ImageButton
                android:id="@+id/playlist5"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_controller"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <ImageButton
                android:id="@+id/playlist6"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_headphone"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <ImageButton
                android:id="@+id/playlist7"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_coding"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <ImageButton
                android:id="@+id/playlist8"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/play_motiv"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners"
                />

        </LinearLayout>


    </LinearLayout>

    <!-- Logout   -->


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/fragment_podcastLL"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_alignParentEnd="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id = "@+id/Logout"
            android:layout_width = "50dp"
            android:layout_height = "50dp"
            app:fabCustomSize="50dp"
            app:elevation="5dp"
            android:src="@mipmap/logout"
            android:layout_gravity="center"
            app:maxImageSize="50dp"
            tools:targetApi="lollipop" />


    </LinearLayout>

</RelativeLayout>